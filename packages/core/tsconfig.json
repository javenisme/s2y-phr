{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "lib": ["esnext", "dom"],
    "outDir": "dist/types",
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**"
  ]
}
